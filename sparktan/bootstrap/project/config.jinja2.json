{
    "Name": "{{ project_name }}",
    "ReleaseLabel": "emr-4.0.0",
    "Instances": {"Ec2KeyName": "emr_jobs",
                  "KeepJobFlowAliveWhenNoSteps": true,
                  "TerminationProtected": false,
                  "Ec2SubnetId": "YOUT_SUBNET_ID",
                  "InstanceGroups": [
                        {
                            "Name": "Spark Master",
                            "Market": "ON_DEMAND",
                            "InstanceRole": "MASTER",
                            "InstanceType": "m3.xlarge",
                            "InstanceCount": 1
                        },
                        {
                            "Name": "Spark Master + HDFS",
                            "Market": "SPOT",
                            "InstanceRole": "CORE",
                            "InstanceType": "r3.xlarge",
                            "InstanceCount": 2,
                            "BidPrice": "0.1"
                        }
                  ]
        },
    "JobFlowRole": "EMR_EC2_DefaultRole",
    "ServiceRole": "EMR_DefaultRole",
    "Applications": [
        {"Name": "Hadoop"},
        {"Name": "Spark"},
        {"Name": "Pig"}
    ],
    "BootstrapActions": [
        {
            "Name": "Setup Python env.",
            "ScriptBootstrapAction": {
                "Path": "s3://PATH_TO_YOUR_BOOTSTRAP_SCRIPT/bootstrap_base.sh"
            }
        }
    ],
    "KeyFile": "~/.ssh/emr_key.pem",
    "SparkConfig": {"num_executors": "2",
                    "executor_cores": "4",
                    "executor_memory": "18g"}
}
